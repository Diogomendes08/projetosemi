class Empresa:
    def __init__(self):
        self.empresas = []
    
    def criar(self, id_empresa, endereco, telefone, email, cadastro, id_sistema):
        self.empresas.append({
            'id_empresa': id_empresa,
            'endereco': endereco,
            'telefone': telefone,
            'email': email,
            'cadastro': cadastro,
            'id_sistema': id_sistema
        })
    
    def buscar(self, id_empresa=None):
        if id_empresa:
            return next((e for e in self.empresas if e['id_empresa'] == id_empresa), None)
        return self.empresas
    
    def atualizar(self, id_empresa, **kwargs):
        empresa = self.buscar(id_empresa)
        if empresa:
            empresa.update(kwargs)
            return True
        return False
    
    def deletar(self, id_empresa):
        empresa = self.buscar(id_empresa)
        if empresa:
            self.empresas.remove(empresa)
            return True
        return False

